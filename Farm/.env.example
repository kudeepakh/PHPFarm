# ====================
# PHPFrarm Environment Configuration
# ====================
# Copy this file to .env and update with your settings
# NEVER commit .env files to version control

# ====================
# Application Settings
# ====================
APP_NAME=PHPFrarm
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# ====================
# Database - MySQL
# ====================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=phpfrarm
DB_USERNAME=phpfrarm_user
DB_PASSWORD=your_secure_mysql_password_here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ====================
# Database - MongoDB
# ====================
MONGO_CONNECTION=mongodb
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=phpfrarm_logs
MONGO_USERNAME=phpfrarm_user
MONGO_PASSWORD=your_secure_mongo_password_here
MONGO_AUTH_SOURCE=admin

# ====================
# Cache - Redis
# ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
CACHE_DRIVER=redis
SESSION_DRIVER=redis

# ====================
# JWT Authentication
# ====================
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your_very_long_secure_jwt_secret_key_minimum_256_bits_change_this_immediately
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=2592000

# ====================
# Email Configuration
# ====================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@phpfrarm.local
MAIL_FROM_NAME="${APP_NAME}"

# ====================
# SMS Configuration (Optional)
# ====================
SMS_PROVIDER=twilio
SMS_FROM_NUMBER=
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_API_KEY=
SMS_API_SECRET=

# ====================
# OTP Configuration
# ====================
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_AUTH_MAX_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW_MINUTES=15

# ====================
# Security
# ====================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Correlation-Id,X-Transaction-Id,X-Request-Id
CORS_EXPOSED_HEADERS=X-Correlation-Id,X-Transaction-Id,X-Request-Id
CORS_MAX_AGE=3600
CORS_CREDENTIALS=true

# ====================
# Logging
# ====================
LOG_LEVEL=debug
LOG_CHANNEL=mongodb
LOG_DEPRECATIONS_CHANNEL=null
LOG_RETENTION_DAYS=30

# ====================
# Session
# ====================
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# ====================
# File Upload
# ====================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=storage/uploads

# ====================
# API Configuration
# ====================
API_VERSION=v1
API_PREFIX=api
API_RATE_LIMIT=60
API_THROTTLE_LIMIT=10

# ====================
# Frontend URL
# ====================
FRONTEND_URL=http://localhost:3000

# ====================
# Queue Configuration (Optional)
# ====================
QUEUE_CONNECTION=redis
QUEUE_DRIVER=redis

# ====================
# Broadcasting (Optional)
# ====================
BROADCAST_DRIVER=log
